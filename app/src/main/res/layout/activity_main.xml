<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="386dp"
        android:layout_height="521dp"
        android:layout_marginBottom="40dp"
        android:background="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/bAC"
                android:layout_width="83dp"
                android:layout_height="97dp"
                android:layout_marginLeft="18dp"
                android:backgroundTint="#EF6322"
                android:text="AC"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                app:cornerRadius="50dp" />

            <Button
                android:id="@+id/bC"
                android:layout_width="83dp"
                android:layout_height="97dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:backgroundTint="#EF6322"
                android:text="C"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                app:cornerRadius="50dp" />

            <Button
                android:id="@+id/bMulti"
                android:layout_width="83dp"
                android:layout_height="97dp"
                android:layout_marginRight="5dp"
                android:backgroundTint="#FFFFFF"
                android:text="*"
                android:textColor="#000000"
                android:textSize="20sp"
                app:cornerRadius="50dp" />

            <Button
                android:id="@+id/bSuma"
                android:layout_width="83dp"
                android:layout_height="97dp"
                android:layout_marginRight="5dp"
                android:backgroundTint="#FFFFFF"
                android:text="+"
                android:textColor="#000000"
                android:textSize="20sp"
                app:cornerRadius="40dp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/b1"
                android:layout_width="83dp"
                android:layout_height="97dp"
                android:layout_marginLeft="18dp"
                android:backgroundTint="#787878"
                android:onClick="enviar"
                android:text="1"
                android:textColor="#000000"
                android:textSize="20sp"
                app:cornerRadius="50dp" />

            <Button
                android:id="@+id/b2"
                android:layout_width="83dp"
                android:layout_height="97dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:backgroundTint="#787878"
                android:text="2"
                android:textColor="#000000"
                android:textSize="20sp"
                app:cornerRadius="50dp" />

            <Button
                android:id="@+id/b3"
                android:layout_width="83dp"
                android:layout_height="97dp"
                android:layout_marginRight="5dp"
                android:backgroundTint="#787878"
                android:text="3"
                android:textColor="#000000"
                android:textSize="20sp"
                app:cornerRadius="50dp" />

            <Button
                android:id="@+id/bResta"
                android:layout_width="83dp"
                android:layout_height="97dp"
                android:layout_marginRight="5dp"
                android:backgroundTint="#FFFFFF"
                android:text="-"
                android:textColor="#000000"
                android:textDirection="rtl"
                android:textSize="20sp"
                app:cornerRadius="40dp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/b4"
                android:layout_width="83dp"
                android:layout_height="97dp"
                android:layout_marginLeft="18dp"
                android:backgroundTint="#787878"
                android:text="4"
                android:textColor="#000000"
                android:textSize="20sp"
                app:cornerRadius="50dp" />

            <Button
                android:id="@+id/b5"
                android:layout_width="83dp"
                android:layout_height="97dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:backgroundTint="#787878"
                android:text="5"
                android:textColor="#000000"
                android:textSize="20sp"
                app:cornerRadius="50dp" />

            <Button
                android:id="@+id/b6"
                android:layout_width="83dp"
                android:layout_height="97dp"
                android:layout_marginRight="5dp"
                android:backgroundTint="#787878"
                android:text="6"
                android:textColor="#000000"
                android:textSize="20sp"
                app:cornerRadius="50dp" />

            <Button
                android:id="@+id/bDivision"
                android:layout_width="83dp"
                android:layout_height="97dp"
                android:layout_marginRight="5dp"
                android:backgroundTint="#FFFFFF"
                android:text="/"
                android:textColor="#000000"
                android:textSize="20sp"
                app:cornerRadius="40dp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/b7"
                android:layout_width="83dp"
                android:layout_height="97dp"
                android:layout_marginLeft="18dp"
                android:backgroundTint="#787878"
                android:text="7"
                android:textColor="#000000"
                android:textSize="20sp"
                app:cornerRadius="50dp" />

            <Button
                android:id="@+id/b8"
                android:layout_width="83dp"
                android:layout_height="97dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:backgroundTint="#787878"
                android:text="8"
                android:textColor="#000000"
                android:textSize="20sp"
                app:cornerRadius="50dp" />

            <Button
                android:id="@+id/b9"
                android:layout_width="83dp"
                android:layout_height="97dp"
                android:layout_marginRight="5dp"
                android:backgroundTint="#787878"
                android:text="9"
                android:textColor="#000000"
                android:textSize="20sp"
                app:cornerRadius="50dp" />

            <Button
                android:id="@+id/bComa"
                android:layout_width="83dp"
                android:layout_height="97dp"
                android:backgroundTint="#ACACAC"
                android:text=","
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                app:cornerRadius="50dp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/b0"
                android:layout_width="wrap_content"
                android:layout_height="95dp"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:layout_span="3"
                android:backgroundTint="#787878"
                android:text="0"
                android:textColor="#000000"
                android:textSize="20sp"
                app:cornerRadius="40dp" />

            <Button
                android:id="@+id/bOperar"
                android:layout_width="83dp"
                android:layout_height="97dp"
                android:backgroundTint="#ACACAC"
                android:text="="
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                app:cornerRadius="50dp" />
        </TableRow>

    </TableLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="384dp"
        android:layout_height="82dp"
        android:textColor="#FFFFFF"
        android:textDirection="rtl"
        android:textSize="64dp"
        app:layout_constraintBottom_toTopOf="@+id/tableLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.592"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.391" />

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="48dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@android:drawable/ic_dialog_dialer"
            android:buttonTint="#FBFBFB"
            android:text="Más"
            android:textColor="#FFFFFF"
            android:textSize="13sp" />

        <RadioGroup
            android:id="@+id/rG"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/radioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="#FFFFFF"
                    android:text="Suma"
                    android:textColor="#FFFFFF"
                    android:textSize="13sp" />

                <RadioButton
                    android:id="@+id/radioButton4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="#FFFFFF"
                    android:text="Resta"
                    android:textColor="#FFFFFF"
                    android:textSize="13sp" />

                <RadioButton
                    android:id="@+id/radioButton3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="#FFFFFF"
                    android:text="Multiplicar"
                    android:textColor="#FFFFFF"
                    android:textSize="13sp" />

                <RadioButton
                    android:id="@+id/radioButton2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="#FFFFFF"
                    android:text="Dividir"
                    android:textColor="#FFFFFF"
                    android:textSize="13sp" />
            </LinearLayout>

        </RadioGroup>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>