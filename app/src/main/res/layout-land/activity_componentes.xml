<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <LinearLayout
        android:layout_width="383dp"
        android:layout_height="43dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.954"
        app:layout_constraintStart_toStartOf="parent">

        <RadioGroup
            android:id="@+id/rG"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            tools:layout_editor_absoluteX="332dp"
            tools:layout_editor_absoluteY="383dp">

            <RadioButton
                android:id="@+id/radioButtonSuma"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="#FFFFFF"
                android:scrollbarFadeDuration="200000"
                android:text="Suma"
                android:textColor="#FFFFFF"
                android:textSize="13sp"
                android:visibility="visible" />

            <RadioButton
                android:id="@+id/radioButtonResta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="#FFFFFF"
                android:scrollbarFadeDuration="200000"
                android:text="Resta"
                android:textColor="#FFFFFF"
                android:textSize="13sp"
                android:visibility="visible" />

            <RadioButton
                android:id="@+id/radioButtonMultiplicar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="#FFFFFF"
                android:scrollbarFadeDuration="200000"
                android:text="Multiplicar"
                android:textColor="#FFFFFF"
                android:textSize="13sp"
                android:visibility="visible" />

            <RadioButton
                android:id="@+id/radioButtonDividir"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="#FFFFFF"
                android:scrollbarFadeDuration="200000"
                android:text="Dividir"
                android:textColor="#FFFFFF"
                android:textSize="13sp"
                android:visibility="visible" />

        </RadioGroup>
    </LinearLayout>

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="643dp"
        android:layout_height="312dp"
        android:background="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/b1"
                android:layout_width="80dp"
                android:layout_height="95dp"
                android:layout_marginLeft="14dp"
                android:backgroundTint="#787878"
                android:onClick="enviar"
                android:text="1"
                android:textColor="#000000"
                android:textSize="20sp"
                app:cornerRadius="50dp" />

            <Button
                android:id="@+id/b2"
                android:layout_width="80dp"
                android:layout_height="95dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:backgroundTint="#787878"
                android:text="2"
                android:textColor="#000000"
                android:textSize="20sp"
                app:cornerRadius="50dp" />

            <Button
                android:id="@+id/b3"
                android:layout_width="80dp"
                android:layout_height="95dp"
                android:layout_marginRight="5dp"
                android:backgroundTint="#787878"
                android:text="3"
                android:textColor="#000000"
                android:textSize="20sp"
                app:cornerRadius="50dp" />

            <Button
                android:id="@+id/bAC"
                android:layout_width="80dp"
                android:layout_height="95dp"
                android:layout_marginLeft="18dp"
                android:backgroundTint="#EF6322"
                android:text="AC"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                app:cornerRadius="50dp" />

            <Button
                android:id="@+id/bC"
                android:layout_width="80dp"
                android:layout_height="95dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:backgroundTint="#EF6322"
                android:text="C"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                app:cornerRadius="50dp" />

            <Button
                android:id="@+id/bMulti"
                android:layout_width="80dp"
                android:layout_height="95dp"
                android:layout_marginRight="5dp"
                android:backgroundTint="#FFFFFF"
                android:text="*"
                android:textColor="#000000"
                android:textSize="20sp"
                app:cornerRadius="50dp" />

            <Button
                android:id="@+id/bSuma"
                android:layout_width="80dp"
                android:layout_height="95dp"
                android:layout_marginRight="2dp"
                android:backgroundTint="#FFFFFF"
                android:text="+"
                android:textColor="#000000"
                android:textSize="20sp"
                app:cornerRadius="40dp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/b4"
                android:layout_width="80dp"
                android:layout_height="95dp"
                android:layout_marginLeft="14dp"
                android:backgroundTint="#787878"
                android:text="4"
                android:textColor="#000000"
                android:textSize="20sp"
                app:cornerRadius="50dp" />

            <Button
                android:id="@+id/b5"
                android:layout_width="80dp"
                android:layout_height="95dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:backgroundTint="#787878"
                android:text="5"
                android:textColor="#000000"
                android:textSize="20sp"
                app:cornerRadius="50dp" />

            <Button
                android:id="@+id/b6"
                android:layout_width="80dp"
                android:layout_height="95dp"
                android:layout_marginRight="5dp"
                android:backgroundTint="#787878"
                android:text="6"
                android:textColor="#000000"
                android:textSize="20sp"
                app:cornerRadius="50dp" />

            <Button
                android:id="@+id/bResta"
                android:layout_width="80dp"
                android:layout_height="95dp"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="5dp"
                android:backgroundTint="#FFFFFF"
                android:text="-"
                android:textColor="#000000"
                android:textDirection="rtl"
                android:textSize="20sp"
                app:cornerRadius="40dp" />

            <Button
                android:id="@+id/bDivision"
                android:layout_width="80dp"
                android:layout_height="95dp"
                android:layout_marginRight="5dp"
                android:backgroundTint="#FFFFFF"
                android:text="/"
                android:textColor="#000000"
                android:textSize="20sp"
                app:cornerRadius="40dp" />

            <Button
                android:id="@+id/bComa"
                android:layout_width="80dp"
                android:layout_height="95dp"
                android:backgroundTint="#ACACAC"
                android:text=","
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                app:cornerRadius="50dp" />

            <Button
                android:id="@+id/bPorcentaje"
                android:layout_width="80dp"
                android:layout_height="95dp"
                android:layout_marginLeft="5dp"
                android:backgroundTint="#ACACAC"
                android:text="%"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                app:cornerRadius="50dp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/b7"
                android:layout_width="80dp"
                android:layout_height="95dp"
                android:layout_marginLeft="14dp"
                android:backgroundTint="#787878"
                android:text="7"
                android:textColor="#000000"
                android:textSize="20sp"
                app:cornerRadius="50dp" />

            <Button
                android:id="@+id/b8"
                android:layout_width="80dp"
                android:layout_height="95dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:backgroundTint="#787878"
                android:text="8"
                android:textColor="#000000"
                android:textSize="20sp"
                app:cornerRadius="50dp" />

            <Button
                android:id="@+id/b9"
                android:layout_width="80dp"
                android:layout_height="95dp"
                android:layout_marginRight="5dp"
                android:backgroundTint="#787878"
                android:text="9"
                android:textColor="#000000"
                android:textSize="20sp"
                app:cornerRadius="50dp" />

            <Button
                android:id="@+id/b0"
                android:layout_width="80dp"
                android:layout_height="95dp"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="5dp"
                android:layout_span="3"
                android:backgroundTint="#787878"
                android:text="0"
                android:textColor="#000000"
                android:textSize="20sp"
                app:cornerRadius="40dp" />

            <Button
                android:id="@+id/bOperar"
                android:layout_width="80dp"
                android:layout_height="95dp"
                android:backgroundTint="#ACACAC"
                android:text="="
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                app:cornerRadius="50dp" />

        </TableRow>

    </TableLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="578dp"
        android:layout_height="84dp"
        android:textColor="#FFFFFF"
        android:textDirection="rtl"
        android:textSize="64dp"
        app:layout_constraintBottom_toTopOf="@+id/tableLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:button="@android:drawable/ic_dialog_dialer"
        android:buttonTint="#FBFBFB"
        android:scrollbarFadeDuration="200000"
        android:text="Más"
        android:textColor="#FFFFFF"
        android:textSize="13sp"
        tools:layout_editor_absoluteX="643dp"
        tools:layout_editor_absoluteY="99dp" />
</androidx.constraintlayout.widget.ConstraintLayout>